@model BussinessObject.DataAccess.Customer

@{
    ViewData["Title"] = "Delete";
}
<style>
    .details-row {
        display: flex;
        flex-wrap: wrap;
        margin-bottom: 10px;
    }

    .details-label {
        flex-basis: 30%;
    }

    .details-value {
        flex-basis: 70%;
    }
</style>
<h1>Delete</h1>



<div>
    <h4>Customer</h4>
    <hr />
    <div class="details-row">
        <div class="details-label">
            @Html.DisplayNameFor(model => model.CustomerId)
        </div>
        <div class="details-value">
            @Html.DisplayFor(model => model.CustomerId)
        </div>
    </div>

    <div class="details-row">
        <div class="details-label">
            @Html.DisplayNameFor(model => model.Email)
        </div>
        <div class="details-value">
            @Html.DisplayFor(model => model.Email)
        </div>
    </div>

    <div class="details-row">
        <div class="details-label">
            @Html.DisplayNameFor(model => model.CustomerName)
        </div>
        <div class="details-value">
            @Html.DisplayFor(model => model.CustomerName)
        </div>
    </div>

    <div class="details-row">
        <div class="details-label">
            @Html.DisplayNameFor(model => model.City)
        </div>
        <div class="details-value">
            @Html.DisplayFor(model => model.City)
        </div>
    </div>

    <div class="details-row">
        <div class="details-label">
            @Html.DisplayNameFor(model => model.Country)
        </div>
        <div class="details-value">
            @Html.DisplayFor(model => model.Country)
        </div>
    </div>

    <div class="details-row">
        <div class="details-label">
            @Html.DisplayNameFor(model => model.Password)
        </div>
        <div class="details-value">
            @Html.DisplayFor(model => model.Password)
        </div>
    </div>

    <div class="details-row">
        <div class="details-label">
            @Html.DisplayNameFor(model => model.Birthday)
        </div>
        <div class="details-value">
            @Html.DisplayFor(model => model.Birthday)
        </div>
    </div>
    <form asp-action="Deleted" asp-route-id="@Model.CustomerId" class="confirm-delete">
        <input type="hidden" name="id" value="@Model.CustomerId" />
        <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete?')" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>


</div>

